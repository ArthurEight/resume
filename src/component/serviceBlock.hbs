{{#with service}}
    <section>
        <div class='card p-2 bg-success text-center text-white'>
            <div class='card-title'>
                <h2>{{title}}</h2>
            </div>
            <div>
                <p class='mb-2'>{{description}}</p>
                {{#each buttons}}
                    <div class='mb-2'>
                        <a href='{{link}}' class='btn btn-primary'>{{text}}</a>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>
{{/with}}